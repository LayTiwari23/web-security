# .env.example
# Copy to `.env` and adjust values for your environment

# -------------------------------------------------
# Core app
# -------------------------------------------------
APP_NAME="Web Security Compliance Checker"
APP_ENV=development
DEBUG=true

# -------------------------------------------------
# Security / Auth
# -------------------------------------------------
# Generate a strong secret key for JWTs
SECRET_KEY="CHANGE_ME_TO_A_LONG_RANDOM_STRING"
ACCESS_TOKEN_EXPIRE_MINUTES=1440
ALGORITHM="HS256"

# -------------------------------------------------
# Database
# -------------------------------------------------
# For Docker dev (Postgres service named "db")
DATABASE_URL=postgresql://postgres:postgres@db:5432/websec_db

# Example for local dev without Docker:
# DATABASE_URL="postgresql+psycopg2://postgres:password@localhost:5432/websec_db"

# -------------------------------------------------
# Redis / Celery
# -------------------------------------------------
# âœ… CORRECT SETTINGS FOR WINDOWS LOCALHOST
# For Docker Compose, use the container name 'redis'
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# -------------------------------------------------
# Rate limiting (optional)
# -------------------------------------------------
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# -------------------------------------------------
# CORS
# -------------------------------------------------
# Comma-separated list, e.g.:
# BACKEND_CORS_ORIGINS="http://localhost:3000,http://127.0.0.1:3000"
# Must use DOUBLE QUOTES "..."
BACKEND_CORS_ORIGINS=["http://localhost","http://localhost:8000","http://localhost:3000"]
# -------------------------------------------------
# PDF / Reports
# -------------------------------------------------
# Directory where generated PDF reports will be stored
PDF_OUTPUT_DIR="pdf_reports"