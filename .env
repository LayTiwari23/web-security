# -------------------------------------------------
# Core
# -------------------------------------------------
APP_NAME="WebSec Audit"
APP_ENV=production
DEBUG=false

# -------------------------------------------------
# Security
# -------------------------------------------------
# Tip: Generate a real key using 'openssl rand -hex 32'
SECRET_KEY="test_secret_key_for_compliance_project"
ALGORITHM="HS256"

# -------------------------------------------------
# Database (Internal Docker name 'db')
# -------------------------------------------------
# ✅ Changed 'localhost' to 'db'
# Change this line in your .env
DATABASE_URL=postgresql+psycopg2://postgres:postgres@db:5432/websec_db
# -------------------------------------------------
# Redis / Celery (Internal Docker name 'redis')
# -------------------------------------------------
# ✅ Changed 'localhost' to 'redis'
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# -------------------------------------------------
# CORS & PDF
# -------------------------------------------------
BACKEND_CORS_ORIGINS=["http://localhost","http://localhost:8000"]
PDF_OUTPUT_DIR="/app/pdf_reports"